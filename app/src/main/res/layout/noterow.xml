<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="android"
            android:id="@+id/txt_noteRow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_noteRow_desc"
            android:layout_margin="8dp"
            tools:text="android course"
            android:layout_below="@id/txt_noteRow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_noteRow_edit"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/txt_noteRow_desc"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_noteRow_delete"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/txt_noteRow_desc"
            android:layout_toLeftOf="@id/img_noteRow_edit"
            app:srcCompat="@drawable/ic_delete_forever_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/txt_noteRow_desc"
            app:srcCompat="@drawable/ic_access_alarm_blue_24dp"
            android:id="@+id/img_noteRow_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_below="@id/txt_noteRow_desc"
            android:text="12:23"
            android:layout_toRightOf="@id/img_noteRow_clock"
            android:id="@+id/txt_noteRow_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.v7.widget.CardView>